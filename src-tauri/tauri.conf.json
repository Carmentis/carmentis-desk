{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "carmentis-operator-light",
  "version": "0.1.0",
  "identifier": "com.carmentis.operator-light",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "carmentis-operator-light",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFCRDM5NDYxRTdGRTVBNjUKUldSbFd2N25ZWlRUcTRabWlFNUE1eWx5aVV4TlBieDZ2TU1CTEszZ296cnpWZWJONkd4MU84UnYK",
      "endpoints": [
        "https://github.com/carmentis/carmentis-operator-light/releases/latest/download/latest.json"
      ]
    },
    "windows": {
      "installMode": "passive"
    }
  }
}
